@inherits LayoutComponentBase

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Jobs Viewer</title>
    <base href="/" />
    
</head>
<body>
    <app>
        <!-- La aplicación Blazor se renderizará aquí -->
        <div class="d-flex flex-column min-vh-100">
            <NavMenu />
            <div class="container flex-grow-1">
                @Body
            </div>
        </div>
    </app>

    <footer class="footer mt-auto py-3 bg-dark text-white">
        <div class="container d-flex justify-content-center align-items-center">
            <img src="/images/evertecblack.png" alt="Logo" width="105" height="27" class="footer-logo" />
            <span class="text-muted ml-3">© 2024 Jobs Viewer. Powered by Evertec Inc.</span>
        </div>
    </footer>

</body>

</html>